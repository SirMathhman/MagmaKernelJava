single val Memory =: {
	val allocate = [Int size] => Any* : {
		return MemoryBridge.of(size);
	}

	val contiguous = [Int count, Int size] => Any* : {
		return MemoryBridge.contiguous(count, size);
	}

	val resize = [Any* block, Int size] : {
		MemoryBridge.resize(block, size);
	}

	val empty = [Any* block] : {
		MemoryBridge.empty(block);
	}
}